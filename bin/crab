#!/usr/bin/env ruby
# vim: set ft=ruby:
require 'crab'

class Crab::Main

  class << self

    include Crab::Utilities

    def run(args=ARGV)
      cmd = args.shift # get the subcommand

      case cmd
      when "-h", "--help", NilClass
        system "crab-help"
        exit 0
      when "-v", "--version"
        system "crab-version"
        exit 0
      end

      unless system("crab-#{cmd}", *args)
        if $?.exitstatus == 127 # bash 'command not found'
          logger.error "Unknown subcommand #{cmd.inspect}"
          system "crab-help"
          exit 127
        end
      end
    end
  end
end

Crab::Main.run
