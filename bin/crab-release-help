#!/usr/bin/env ruby
# vim: set ft=ruby:
require 'crab'

class Crab::ReleaseHelp

  def self.run
    puts <<-HELP
Usage: crab release <command> [options*]

  Available commands:

  list  List releases available in the current project
  help  Show this help text

     --help, -h:   Show this message
    HELP
  end
end

Crab::ReleaseHelp.run
