#!/usr/bin/env ruby
# vim: set ft=ruby:

cmd = ARGV.shift # get the subcommand

case cmd
when "-h", "--help", NilClass
  system "crab-release-help"
  exit 0
end

unless system("crab-release-#{cmd}", *ARGV)
  if $?.exitstatus == 127 # bash 'command not found'
    $stderr.puts "Unknown subcommand \"release #{cmd}\""
    system "crab-release-help"
    exit 127
  end
end
